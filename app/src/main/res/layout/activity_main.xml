                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Convertor"
                        android:textColor="#6f6f6f"
                        android:textSize="18sp">

                    </TextView>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

